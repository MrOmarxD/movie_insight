{
  "openapi": "3.0.0",
  "info": {
    "title": "User Service API",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:5002" }],
  "components": {
    "securitySchemes": {
      "bearerAuth": { "type": "http", "scheme": "bearer", "bearerFormat": "JWT" }
    }
  },
  "paths": {
    "/health": {
      "get": { "summary": "Healthcheck", "responses": { "200": { "description": "ok" } } }
    },
    "/auth/register": {
      "post": {
        "summary": "Registrar usuario",
        "requestBody": { "required": true },
        "responses": { "201": { "description": "Creado" }, "409": { "description": "Ya existe" } }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": { "required": true },
        "responses": { "200": { "description": "Token y usuario" }, "401": { "description": "Credenciales invalidas" } }
      }
    },
    "/users/{id}/favorites": {
      "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }],
      "get": {
        "summary": "Listar favoritos",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Lista de favoritos" } }
      },
      "post": {
        "summary": "Anadir favorito",
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "required": true },
        "responses": { "200": { "description": "Favorito anadido" }, "409": { "description": "Duplicado" } }
      }
    },
    "/users/{id}/favorites/{imdbid}": {
      "parameters": [
        { "in": "path", "name": "id", "required": true, "schema": { "type": "string" } },
        { "in": "path", "name": "imdbid", "required": true, "schema": { "type": "string" } }
      ],
      "delete": {
        "summary": "Eliminar favorito",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Favorito eliminado" } }
      },
      "put": {
        "summary": "Actualizar rating/comentario",
        "security": [{ "bearerAuth": [] }],
        "requestBody": { "required": true },
        "responses": { "200": { "description": "Favorito actualizado" } }
      }
    },
    "/users/{id}/favorites/logs": {
      "parameters": [{ "in": "path", "name": "id", "required": true, "schema": { "type": "string" } }],
      "get": {
        "summary": "Ver auditoria de favoritos (Postgres)",
        "security": [{ "bearerAuth": [] }],
        "responses": { "200": { "description": "Historial" } }
      }
    }
  }
}
